<div class="row">
  <div class="col-xs-offset-3 col-xs-6">
    <div class="panel panel-default">
      <div class="panel-heading">交換日記を書く</div>
      <div class="panel-body">
        <%= form_for(@diary) do |f| %>
          <%= hidden_field_tag :send_id, params[:send_id] %>
          <div class="form-group">
            <%= f.label :content, '日記' %>
            <%= f.text_area :content, class: 'form-control', rows: 10 %>
          </div>
          <div class="text-right">
            <%= button_tag(class: "btn btn-brown200_rsd") do %>
              <%= content_tag :span, "日記を書く", class: "glyphicon glyphicon-pencil" %>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
